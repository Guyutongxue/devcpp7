{
  "$schema": "http://json.schemastore.org/electron-builder",
  "productName": "Dev-C++ 7",
  "directories": {
    "output": "release/"
  },
  "extraResources": [
    {
      "from": "./src/extraResources/",
      "to": "extraResources",
      "filter": [
        "**/*"
      ]
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "src/background/**/*",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "dist/assets/icons/favicon.ico",
    "target": [
      "7z"
    ]
  }
}